{
    "name": "vocab-app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "npm run build:client && wrangler build",
        "deploy": "npm run build:client && wrangler deploy",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:client\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
        "dev:backend": "wrangler dev --var OPENAI_TOKEN:$OPENAI_TOKEN --var ENVIRONMENT:development",
        "dev:client": "cd client && npm run dev",
        "start": "npm run dev",
        "test": "vitest run",
        "test:watch": "vitest --watch",
        "test:run": "vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:frontend": "cd client && npm run test",
        "test:all": "npm run test:run && npm run test:frontend:run",
        "cf-typegen": "wrangler types",
        "build:client": "cd client && npm install && npm run build"
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.32",
        "@cloudflare/workers-types": "^4.20250423.0",
        "@vitest/coverage-v8": "^3.0.7",
        "@vitest/ui": "^3.0.7",
        "concurrently": "^9.1.2",
        "typescript": "^5.5.2",
        "vitest": "~3.0.7",
        "wrangler": "^4.13.0"
    },
    "dependencies": {
        "better-sqlite3": "^11.10.0"
    }
}
