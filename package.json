{
    "name": "vocab-app",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "_err": "echo \"Error: OPENAI_TOKEN environment variable is not set. Please set it before running.\"",
        "build": "npm run build:client && wrangler build",
        "deploy": "npm run build:client && wrangler deploy",
        "dev": "[ -n \"$OPENAI_TOKEN\" ] || (npm run _err && exit 1) && concurrently \"npm run dev:backend\" \"npm run dev:client\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
        "dev:backend": "[ -n \"$OPENAI_TOKEN\" ] || (npm run _err && exit 1) && wrangler dev --var OPENAI_TOKEN:$OPENAI_TOKEN --var ENVIRONMENT:development",
        "dev:client": "cd client && npm run dev",
        "start": "npm run dev",
        "test": "vitest run",
        "test:backend": "vitest run",
        "test:frontend": "cd client && npm run test",
        "test:frontend:run": "cd client && npm run test",
        "test:watch": "vitest --watch",
        "test:run": "vitest run --reporter=verbose",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:all": "npm run test:backend && npm run test:frontend:run",
        "cf-typegen": "wrangler types",
        "build:client": "cd client && npm install && npm run build",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:all": "prettier --write . && cd client && prettier --write ."
    },
    "devDependencies": {
        "@cloudflare/vitest-pool-workers": "^0.8.36",
        "@cloudflare/workers-types": "^4.20250423.0",
        "@eslint/js": "^9.28.0",
        "@types/json2md": "^1.5.4",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "concurrently": "^9.1.2",
        "eslint": "^9.28.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.2.0",
        "prettier": "^3.5.3",
        "typescript": "^5.5.2",
        "typescript-eslint": "^8.33.1",
        "vitest": "^3.1.4",
        "wrangler": "^4.13.0"
    },
    "dependencies": {
        "better-sqlite3": "^11.10.0",
        "json2md": "^2.0.3"
    }
}
